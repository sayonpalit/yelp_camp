<% include partials/header %>

<div class = "container">
	
	<header class = "jumbotron">
		<div class = "container">
			<h1>Welcome to Yelpcamp</h1>
			<p>View campgrounds from all over the world</p>
			<p>
				<a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add new campgrounds</a>
			</p>
		</div>
	</header>
	
	<div class = "row">
		<div class = "col-lg-12">
			<h3>Our most popular campgrounds</h3>
		</div>
	</div>
	<div class = "row text-center" style = "display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(campsite){ %>
			<div class = "col-md-3 col-sm-6">
				<div class = "thumbnail">
					<img src = "<%= campsite.image %>">
					<div class = "caption">
						<h4><%= campsite.name %></h4>
					</div>
					<p>
						<a href = "/campgrounds/<%= campsite._id %>" class = "btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<% include partials/footer %>
